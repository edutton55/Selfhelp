<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Help-Conciousness</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url(http://i.huffpost.com/gen/1395673/thumbs/o-HAPPY-MOUNTAIN-TOP-facebook.jpg);">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Help-Conciousness", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["UserId"] == null || (string)Session["Role"] == "User")
            { 
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="font-size: 18px;">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="font-size: 18px;">@Html.ActionLink("Quotes", "Index", "Quote")</li>
                    <li style="font-size: 18px;">@Html.ActionLink("Articles", "Articles", "Quote")</li>
                    <li style="font-size: 18px;">@Html.ActionLink("Learn More", "About", "Home")</li>
                    <li style="font-size: 18px;">@Html.ActionLink("Ask the Creator", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            }
            else if ((string)Session["Role"] == "Power User")
            {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Articles", "Articles", "Quote")</li>
                    <li>@Html.ActionLink("Quotes", "AdminQuoteIndex", "Quote")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            }
            else if ((string)Session["Role"] == "Admin")
            {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Quotes", "AdminQuoteIndex", "Quote")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="color: white;">
            <p>&copy; @DateTime.Now.Year - Help-Consciousness</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model IEnumerable<HelpConsciousness.Models.QuoteVM>
@if (Session["UserId"] == null)
{
    Response.Redirect("http://localhost:59440/User/Login");
}
@if ((string)Session["Role"] != "User")
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
else
{
    Response.Redirect("http://localhost:59440/Home/Index");
}

<h2>Quote Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="background-color: wheat; border-radius: 4px; padding: 10px; text-align: center;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuoteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phrase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumRatings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingScore)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuoteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phrase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumRatings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RatingScore)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.QuoteId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.QuoteId })
                </td>
            </tr>
        }

    </table>
</div>